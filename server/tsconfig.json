{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "removeComments": true,
      "outDir": "dist",
      "baseUrl": ".",
      "preserveConstEnums": true,
      "sourceMap": true,
      "paths": {
        "*": [
            "node_modules/*"
            ]
        }
    },
    "include": [
      "src/**/*"
    ]
  }